<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dep2_Mypage">

    <View
        android:id="@+id/Action_bar_sd"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/h_button_round"
        android:backgroundTint="#BCBBBB"
        android:fontFamily="@font/suitemedium"
        />



    <View
        android:id="@+id/Action_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:background="@drawable/h_button_round"
        android:backgroundTint="#758652"
        android:fontFamily="@font/suitemedium"

        android:textColor="#FFFFFF"
        android:textSize="24dp" />



    <View
        android:id="@+id/back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="19dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/h_backbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/suitemedium"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />



    <LinearLayout
        android:id="@+id/layout_1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@id/Action_bar_sd"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="40dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Action_bar_sd"
            android:background="@drawable/jy_generalbutton_naver"
            android:text="네이버로 회원가입"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginVertical="3dp"/>
        <Button
            android:id="@+id/id_and_passjoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Action_bar_sd"
            android:background="@drawable/jy_generalbutton"
            android:text="아이디와 비밀번호로 회원가입"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginVertical="3dp"/>

    </LinearLayout>



</RelativeLayout>


