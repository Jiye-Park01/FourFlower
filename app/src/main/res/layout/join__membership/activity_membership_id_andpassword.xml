<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E7E1"
    tools:context=".Dep2_Mypage">

    <View
        android:id="@+id/Action_bar_sd"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/h_button_round"
        android:backgroundTint="#BCBBBB"
        android:fontFamily="@font/suitemedium"
        />



    <View
        android:id="@+id/Action_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:background="@drawable/h_button_round"
        android:backgroundTint="#758652"
        android:fontFamily="@font/suitemedium"

        android:textColor="#FFFFFF"
        android:textSize="24dp" />



    <View
        android:id="@+id/back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="19dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/h_backbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/suitemedium"
        android:text="아이디로 회원가입"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <!--    닉네임과 주소 설정-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lay"
        android:layout_below="@id/Action_bar_sd">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/jy_person_plus"
            android:id="@+id/person"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:hint="닉네임"
                android:paddingStart="10dp"
                android:backgroundTint="#DADADA"/>
            <EditText
                android:id="@+id/apartmentName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:hint="주소"
                android:paddingStart="10dp"
                android:backgroundTint="#DADADA"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lay_1"
        android:layout_below="@id/lay">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="계정 정보 설정"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/id_t"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="35dp"
            android:layout_weight="105"
            android:hint="아이디 입력"
            android:paddingStart="10dp"
            android:backgroundTint="#DADADA"/>
        <EditText
            android:id="@+id/password_t"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="35dp"
            android:layout_weight="105"
            android:hint="비밀번호 입력"
            android:paddingStart="10dp"
            android:backgroundTint="#DADADA"/>
        <EditText
            android:id="@+id/password_check_t"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="35dp"
            android:layout_weight="105"
            android:hint="비밀번호 확인"
            android:paddingStart="10dp"
            android:backgroundTint="#DADADA"/>
        <EditText
            android:id="@+id/name_t"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="35dp"
            android:layout_weight="105"
            android:hint="이름 입력"
            android:paddingStart="10dp"
            android:backgroundTint="#DADADA"/>
        <EditText
            android:id="@+id/phoneNum_t"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="35dp"
            android:layout_weight="105"
            android:hint="연락처 입력"
            android:paddingStart="10dp"
            android:backgroundTint="#DADADA"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/jy_generalbutton"
            android:text="회원가입"/>

    </LinearLayout>



</RelativeLayout>


